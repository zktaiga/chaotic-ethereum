{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "before 6am on monday"
  ],
  "timezone": "UTC",
  "labels": [
    "dependencies"
  ],
  "assignees": [
    "@zktaiga"
  ],
  "reviewers": [
    "@zktaiga"
  ],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "enabled": true
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "hyperledger/besu",
        "erigontech/erigon",
        "ethereum/client-go",
        "sigp/lighthouse",
        "chainsafe/lodestar",
        "nethermind/nethermind",
        "statusim/nimbus-eth2",
        "gcr.io/prysmaticlabs/prysm/beacon-chain",
        "ghcr.io/paradigmxyz/reth",
        "consensys/teku"
      ],
      "groupName": "Ethereum clients",
      "automerge": false,
      "schedule": [
        "before 6am on monday"
      ]
    }
  ]
}
